<UserControl x:Class="SilverlightDmgCalc.StatBoostChanger"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             d:DesignHeight="34" d:DesignWidth="201">

    <Grid x:Name="LayoutRoot">
        <Slider Height="23" HorizontalAlignment="Left" Maximum="6" Minimum="-6" Name="Slider1" VerticalAlignment="Top" Width="88" Margin="5,5,0,0" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="99,5,0,0" Name="TextBox1" TextAlignment="Center" VerticalAlignment="Top" Width="39" Text="{Binding Path=Value, Mode=TwoWay, ElementName=Slider1}" />
        <Button Content="+" Height="23" HorizontalAlignment="Left" Margin="144,5,0,0" Name="btnPlus" VerticalAlignment="Top" Width="23" />
        <Button Content="-" Height="23" HorizontalAlignment="Left" Margin="173,5,0,0" Name="btnMinus" VerticalAlignment="Top" Width="23" />
    </Grid>
</UserControl>
